@model finalProject_V1.Models.tProducts
@{
    ViewBag.Title = "AddintoCart";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}

<h2>Buy</h2>
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="col-md-6">
    <div class="thumbnail">
        <img src="~/Images/@Model.fImage" alt="商品圖片" height="100" />
        <div class="caption">
            <h3>@Model.fName</h3>
            <p>@Model.fDescription</p>
            <p>售價 : @Model.fPrice</p>
            <p>庫存 : @Model.fQuantity</p>

        </div>
    </div>
</div>

@using (Html.BeginForm(Html.BeginForm("AddintoCart", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.fId })))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <h4>數量</h4>
        <div>
            <input type="text" name="fQuantity" class="form-control" required="required" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="加入購物車" class="btn btn-default" />
        </div>
    </div>

}

<div>
    <a href="@Url.Action("Homepage", "Home")" class="btn btn-primary" role="button">返回</a>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}